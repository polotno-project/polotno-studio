{
  "name": "polotno-studio",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@meronex/icons": "^4.0.0",
    "@testing-library/jest-dom": "^5.11.8",
    "@testing-library/react": "^11.2.3",
    "@testing-library/user-event": "^12.6.0",
    "electron-is-dev": "^1.2.0",
    "localforage": "^1.9.0",
    "polotno": "^0.20.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-icons": "^4.1.0",
    "react-scripts": "4.0.1"
  },
  "main": "public/electron.js",
  "build": {
    "appId": "dev.polotno.studio",
    "productName": "Polotno Studio",
    "copyright": "Copyright Â© 2021 Anton Lavrenov",
    "mac": {
      "identity": "lavrton@gmail.com (E94W3RRET5)",
      "category": "public.app-category.utilities",
      "hardenedRuntime": true,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "gatekeeperAssess": false,
      "target": [
        "mas"
      ]
    },
    "mas": {
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "build"
    }
  },
  "homepage": ".",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "electron-dev": "concurrently \"BROWSER=none npm start\" \"electron .\"",
    "preelectron-build": "npm run build",
    "electron-build": "electron-builder",
    "afterSign": "scripts/notarize.js"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^5.3.0",
    "electron": "^11.1.1",
    "electron-builder": "^22.9.1"
  }
}
